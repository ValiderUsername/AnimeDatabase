@model IEnumerable<AnimeDatabase.Models.Animeliste>

@{
    ViewData["Title"] = "AnimeDB";
}

<h1 class="Webseitetitel">Animeliste</h1>
<button class="standardbutton">
    <a class="schrift" asp-action="Create">Create New</a>
</button>
<form asp-controller="Animelisten" asp-action="Index">
    <p>
         Search for Title: <input class="searchbar" type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Episoden)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th>Daten bearbeiten</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Episoden)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                <button class="standardbutton"><a class="schrift" asp-action="Edit" asp-route-id="@item.ID">Edit</a></button>
                <button class="standardbutton"><a class="schrift" asp-action="Details" asp-route-id="@item.ID">Details</a></button>
                <button class="standardbutton"><a class="schrift" asp-action="Delete" asp-route-id="@item.ID">Delete</a></button>
            </td>
        </tr>
}
    </tbody>
</table>
