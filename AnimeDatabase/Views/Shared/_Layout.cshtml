<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AnimeDatabase</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AnimeDatabase.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
 <ul>
  <li><a asp-area="" asp-controller="Home" asp-action="Index">AnimeDatabase - Home</a></li>
  <li><a asp-area="" asp-controller="Animelisten" asp-action="Index">AnimeDB</a></li>
  <li><a asp-area="" asp-controller="Characterliste" asp-action="Index">CharacterDB</a></li>
</ul>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container, schrift">
            &copy; 2022 - AnimeDatabase - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
