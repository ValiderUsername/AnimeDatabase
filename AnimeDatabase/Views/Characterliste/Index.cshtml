@model IEnumerable<AnimeDatabase.Models.Characterliste>

@{
    ViewData["Title"] = "CharacterDB";
}

<h1 class="Webseitetitel">Characterliste</h1>
<button class="standardbutton">
    <a class="schrift" asp-action="Create">Create New</a>
</button>

<form asp-controller="Characterliste" asp-action="Index">
    <p>
        Search for Name: <input class="searchbar" type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="container">
    <thead>
        <tr>
            <th class="trennung"><h2>
                @Html.DisplayNameFor(model => model.Name)
            </h2></th>
            <th class="trennung"><h2>
                @Html.DisplayNameFor(model => model.Alter)
            </h2></th>
            <th class="trennung"><h2>
                @Html.DisplayNameFor(model => model.Grösse)
            </h2></th>
            <th class="trennung"><h2>Daten bearbeiten</h2></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="trennung">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="trennung">
                @Html.DisplayFor(modelItem => item.Alter)
            </td>
            <td class="trennung">
                @Html.DisplayFor(modelItem => item.Grösse)
            </td>
            <td class="trennung">
                <button class="standardbutton"><a class="schrift" asp-action="Edit" asp-route-id="@item.ID">Edit</a></button>
                <button class="standardbutton"><a class="schrift" asp-action="Details" asp-route-id="@item.ID">Details</a></button>
                <button class="standardbutton"><a class="schrift"asp-action="Delete" asp-route-id="@item.ID">Delete</a></button>
            </td>
        </tr>
        }
    </tbody>
</table>
